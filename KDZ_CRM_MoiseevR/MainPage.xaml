<Page x:Class="FrameDemo.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FrameDemo"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="MainPage">

    <Grid>
        <ListBox Name="listBoxPeople" Height="100" VerticalAlignment="Top" DisplayMemberPath="Name"></ListBox>
        <Label Content="This is the main page!" FontSize="20" HorizontalAlignment="Center"
               VerticalAlignment="Center"/>
        <Button Name="buttonNewPerson" Width="150" Height="25" Margin="0 10" 
                VerticalAlignment="Bottom" Click="buttonNewPerson_Click">Новый сотрудник</Button>

    </Grid>
</Page>
